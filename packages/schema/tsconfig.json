{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "noEmit": false,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "src/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
